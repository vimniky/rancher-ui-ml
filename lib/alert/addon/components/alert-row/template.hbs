{{#if bulkActions}}
  <td valign="middle" class="row-check" style="padding-top: 2px;">
    {{check-box nodeId=model.id}}
  </td>
{{/if}}
<td data-title="{{dt.state}}" class="clip">
  {{badge-state model=model}}
</td>
<td data-title="{{dt.displayName}}" class="clip">
  <a href="">{{model.displayName}}</a>
  <div class="text-small text-muted clip">{{model.description}}</div>
</td>
<td data-title="{{dt.target}}" class="clip">
  <span class="text-small">
    {{displayTargetType}}
  </span>
  {{#if (or (eq model.targetType 'workloadSelector') (eq model.targetType 'nodeSelector'))}}
    <div class="text-muted">
      {{#each displayTargetList as |item|}}
        <span
          class="badge badge-xs bg-info"
          style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
        >
          {{item}}
        </span>
      {{/each}}
    </div>
  {{else if (eq model.targetType 'pod')}}
    <div class="text-muted">
      <span
        class="badge badge-xs bg-info"
        style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
      >
        {{model.targetPod.id}}
      </span>
    </div>
  {{else if (eq model.targetType 'workload')}}
    <div class="text-muted">
      <span
        class="badge badge-xs bg-info"
        style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
      >
        {{model.targetWorkload.id}}
      </span>
    </div>
  {{else if (eq model.targetType 'node')}}
    <div class="text-muted">
      <span
        class="badge badge-xs bg-info"
        style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
      >
        {{model.targetNode.id}}
      </span>
    </div>
  {{else if (eq model.targetType 'systemService')}}
    <div class="text-muted">
      <span
        class="badge badge-xs bg-info"
        style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
      >
        {{model.targetSystemService.condition}}
      </span>
    </div>
  {{else if (eq model.targetType 'node')}}
    <div class="text-muted">
      <span
        class="badge badge-xs bg-info"
        style="color:#ecf0f1!important;border-radius:1px;margin-right:2px;"
      >
        {{model.targetSystemService.condition}}
      </span>
    </div>
  {{/if}}
</td>
<td data-title="{{dt.condition}}" class="clip">
  {{displayCondition}}
</td>
<td data-title="{{dt.recipients}}" class="clip">
  {{#if model.recipients.length}}
    <span class="text-small">{{model.recipients.length}} items</span>
    <div class="text-muted clip text-small">
      {{#each model.recipients as |item|}}
        <span class="text-capitalize">{{item.notifierType}}</span>/{{item.recipient}}
      {{/each}}
    </div>
  {{else}}
    <div class="text-muted">NONE</div>
  {{/if}}
</td>

<td data-title="{{t 'generic.actions'}}" class="actions">
  {{action-menu model=model}}
</td>
