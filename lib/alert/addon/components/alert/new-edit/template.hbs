<div class="row">
  <div class="col span-12 pt-0 mt-0">
    {{form-name-description
      name=model.name
      nameDisabled=false
      description=model.description
      bothColClass="col span-6 mt-0"
      colClass="col span-12 mt-0"
      namePlaceholder="newContainer.name.placeholder"
      descriptionPlaceholder="newContainer.description.placeholder"
    }}
  </div>
</div>

<div class="box mt-20">
  {{alert/form-rules
      pods=pods
      workloads=workloads
      isCreate=isCreate
      model=model
  }}
  <hr/>
  {{alert/form-notifier
      isCreate=isCreate
      notifiers=notifiers
      model=model
  }}
</div>

<div class="box mt-20">
  <div class="row">
    <div class="col span-6">
      <label class="acc-label">Initial Wait</label>
      {{alert/form-interval value=3}}
      <p class="text-info text-small">
        How long to initially wait to send a notification when an alert is triggered
      </p>
    </div>

    <div class="col span-6">
      <label class="acc-label">Interval</label>
      {{alert/form-interval value=3}}
      <p class="text-info text-small">Repeat interval of sending a notification when an alert is active.</p>
    </div>
  </div>

  <div>
    <div><label class="acc-label">Severity</label></div>
    <label class="mr-10 text-info">{{radio-button selection=severity value="info"}} Info</label>
    <label class="mr-10 text-warning">{{radio-button selection=severity value="warning"}} Warning</label>
    <label class="mr-10 text-error">{{radio-button selection=severity value="critical"}} Critical</label>
  </div>
</div>

<section class="box mt-20 alert-rule-overview">
  <h2>Overview</h2>
  <hr/>
  <div class="content">
    <div>
      Send an alert to
    </div>
    <ul>
      <li>
        {{if notifierType notifierType '#notifier'}}
      </li>
      <li>
        {{if notifierType notifierType '#notifier'}}
      </li>
      <li>
        {{if notifierType notifierType '#notifier'}}
      </li>
    </ul>
    <div>
      When Pod <code>xxxx</code> is not running.
    </div>
  </div>
</section>

<div class="mt-20">
  {{top-errors errors=errors}}
</div>

<div class="mv-20">
  {{save-cancel
      createLabel=(if isCreate 'alertPage.create' 'alertPage.save')
      save="save"
      cancel="cancel"
  }}
</div>