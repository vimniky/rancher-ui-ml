<div class="row">
  <div class="col span-12 pt-0 mt-0">
    {{form-name-description
      name=model.name
      nameDisabled=false
      description=model.description
      bothColClass="col span-6 mt-0"
      colClass="col span-12 mt-0"
      namePlaceholder="newContainer.name.placeholder"
      descriptionPlaceholder="newContainer.description.placeholder"
    }}
  </div>
</div>

<div class="row">
  <div class="col span-4">
    <label class="acc-label">Initial Wait</label>
    {{alert/form-interval value=3}}
    <p class="text-info text-small">
      How long to initially wait to send a notification when an alert is triggered
    </p>
  </div>
  <div class="col span-4">
    <label class="acc-label">Repeat Interval</label>
    {{alert/form-interval value=3}}
    <p class="text-info text-small">
      How long to wait before sending a notification again if it has already been sent successfully for an alert
    </p>
  </div>

  <div class="col span-4">
    <label class="acc-label">Severity</label>
    {{new-select
        classNames="text-capitalize form-control"
        content=severities
        value=model.severity
    }}
  </div>
</div>

{{alert/form-rules isCreate=isCreate model=model}}

<div class="mt-20">
  {{top-errors errors=errors}}
</div>

<div class="mv-20">
  {{save-cancel createLabel=(if isCreate 'alertPage.create' 'alertPage.save') save="save" cancel="cancel"}}
</div>