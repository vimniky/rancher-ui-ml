{{log newAlert}}
<section class="row">
  <div class="col span-1">
    <div class="pt-10">
      <label>WHEN A</label>
    </div>
  </div>

  <div class="col span-10">
    <div class="row">
      <div class="col span-3">
        <label>
          {{radio-button selection=newAlert.targetType value="systemService"}} System Service
        </label>
      </div>
      <div class="col span-6 mt-0">
        {{searchable-select
            content=pods
            class="form-control"
            value=newAlert.targetPod.id
            optionValuePath="id"
            optionLabelPath="name"
            placeholder="Choose a System Service"
            readOnly=(not-eq newAlert.targetType 'systemService')
        }}
      </div>
    </div>

    <div class="row">
      <div class="col span-3">
        <label>
          {{radio-button selection=newAlert.targetType value="node"}} Node
        </label>
      </div>
      <div class="col span-6 mt-0">
        {{searchable-select
            content=nodes
            class="form-control"
            value=newAlert.targetNode.id
            optionValuePath="id"
            optionLabelPath="name"
            placeholder="Choose a Node"
            readOnly=(not-eq newAlert.targetType 'node')
        }}
      </div>
    </div>
    <div class="row">
      <div class="col span-3">
        <label>
          {{radio-button selection=newAlert.targetType value="nodeSelector"}} Node Selector
        </label>
      </div>
      <div class="col span-6 mt-0">
        <!-- <p class="text-info text-small">Workloads that match all the selectors will be selected.</p> -->
        {{#if (eq newAlert.targetType 'nodeSelector')}}
          {{form-key-value
              addActionLabel="alertPage.addSelectorLabel"
              initialMap=newAlert.targetNode.selector
              changed=(action (mut newAlert.targetNode.selector))
          }}
        {{else}}
          <button {{action "noop"}} style="cursor:not-allowed;" class="btn bg-disabled icon-btn">
            <span class="darken"><i class="icon icon-plus text-small"/></span>
            <span>{{t 'alertPage.addSelectorLabel'}}</span>
          </button>
        {{/if}}
      </div>
    </div>
  </div>
</section>
<hr/>
<section class="row">
  <div class="col span-1">
    <label class="pt-10">IS</label>
  </div>
  <div class="col span-10">
  {{#if (eq newAlert.targetType 'pod')}}
    <label class="mr-10">
      {{radio-button selection=newAlert.targetPod.condition value="notrunning"}} Not Running
    </label>
    <label class="mr-10">
      {{radio-button selection=newAlert.targetPod.condition value="notscheduled"}} Not Scheduled
    </label>
    <label class="mr-10">
      {{radio-button selection=newAlert.targetPod.condition value="restarts"}} Restarted
    </label>
    <div style="display:inline-block;width:100px;">
      {{input-integer disabled=(not-eq newAlert.targetPod.condition 'restarts') min=1 max=1000 value=newAlert.targetPod.restartTimes}}
    </div> times within the last 5 minutes
  {{else if (or (eq newAlert.targetType 'workload') (eq newAlert.targetType 'nodeSelector'))}}
    <div class="row">
      <div class="col span-6 mt-0">
        <div class="input-group pt-5">
          {{input-slider
              value=newAlert.targetNode.unavailablePercentage
              valueMin=0
              valueMax=100
              step=1
          }}
          <span class="input-group-addon">{{newAlert.targetNode.unavailablePercentage}}% unavailable</span>
        </div>
      </div>
    </div>
  {{else}}
  {{/if}}
  </div>
</section>

<hr/>

<section class="row">
  <div class="col span-1">
    SEND A
  </div>
  <div class="col span-10">
    <label class="mr-10">{{radio-button selection=newAlert.severity value="critical"}} Critical</label>
    <label class="mr-10">{{radio-button selection=newAlert.severity value="warning"}} Warning</label>
    <label class="mr-10">{{radio-button selection=newAlert.severity value="info"}} Info</label>
  </div>
</section>
