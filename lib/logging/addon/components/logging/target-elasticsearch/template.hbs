<h4 class="pt-30">Elasticsearch Configuration</h4>
<hr/>
<section class="mb-30 box">
  <div class="row">
    <div class="col span-6 mt-0 pt-0">
      <label class="acc-label" for="">Host{{field-required}}</label>
      {{input
          type="text"
          value=model.esHost
          classNames="form-control"
          placeholder="e.g. 192.168.1.10"
      }}
    </div>
    <div class="col span-6 mt-0 pt-0">
      <label class="acc-label" for="">Port{{field-required}}</label>
      {{input-integer
          class="form-control"
          min=1
          max=65535
          value=model.esPort
          placeholder="e.g. 9200"
      }}
    </div>
  </div>
  <div class="row">
    <div class="col span-12">
      <label class="acc-label" for="useTLS">
        {{input
            type="checkbox"
            classNames="form-control"
            name="useTLS"
            checked=tls
            placeholder=""
        }}
        Use TLS
      </label>
    </div>
  </div>
</section>

{{#accordion-list classNames="mt-30" as | al expandFn |}}
  {{logging/form-index-pattern
      classNames="accordion-wrapper"
      model=model
      originalModel=originalModel
      expandAll=al.expandAll
      defaultPrefix=defaultPrefix
      expandFn=expandFn
  }}
  {{#accordion-list-item
       title="Elasticsearch X-Pack Security option"
       detail="If your elasticsearch use X-Pack built-in native authentication features, put your username and password below."
       showStatus=false
       expandAll=al.expandAll
       expand=(action expandFn)
  }}
    <div class="row">
      <div class="col span-6">
        <label class="acc-label" for="">User Name</label>
        {{input
            type="text"
            value=model.esAuthUser
            classNames="form-control"
            placeholder="e.g. username"
        }}
      </div>
      <div class="col span-6">
        <label class="acc-label">Password</label>
        {{input
            type="text"
            value=model.esAuthPassword
            classNames="form-control"
            placeholder="e.g. xxx"
        }}
      </div>
    </div>
  {{/accordion-list-item}}
{{/accordion-list}}
